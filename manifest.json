{
  "manifest_version": 2,
  "name": "extension-name",
  "version": "0.1",
  "author": "author-name",
  "description": "description",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "graphics/icon.png"
  },

  "homepage_url": "https://github.com/AayushPanda/chrome-extension-template",

  "options_ui": {
    "page": "options/options.html"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "clipboardRead"
  ]
}